<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="클라이언트ID : "
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:id="@+id/text_clientId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="clientId"
                    android:textSize="8dp"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="연결상태 : "
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:id="@+id/text_connectState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="connectState"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="디바이스ID : "
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="deviceID"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="61dp"
                    android:text="매트 온도"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="61dp"
                    android:text="외부 온도"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_temp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="12dp"
                    app:progress_text_size="18dp"
                    app:line_width="12dp"
                    app:line_count="30"/>
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/outside_temp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="12dp"
                    app:progress_text_size="18dp"
                    app:line_width="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:text="매트 온도 설정(수동 조작)"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/resultTemp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="28"
                        android:color="@color/black"
                        android:fontFamily="@font/nanum"/>
                    <SeekBar
                        android:id="@+id/set_temp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:max="50"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="12dp"
                        android:text="외부 습도"
                        android:color="@color/black"
                        android:fontFamily="@font/nanum_bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/outside_humdi"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="12dp"
                    app:progress_text_size="18dp"
                    app:line_width="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginVertical="12dp"
                        android:text="가습기 습도 설정(수동 조작)"
                        android:color="@color/black"
                        android:fontFamily="@font/nanum_bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/humdi_text"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="꺼짐"/>
                        <Switch
                            android:id="@+id/set_humdi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:text="침대 압력 감지"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_pressure"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="12dp"
                    app:progress_text_size="18dp"
                    app:line_width="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginVertical="18dp"
                        android:text="압력 감지 상태"
                        android:color="@color/black"
                        android:fontFamily="@font/nanum_bold"/>
                    <TextView
                        android:id="@+id/pressure_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="14dp"
                        android:gravity="center"
                        android:text="침대에 있음"
                        android:color="@color/black"
                        android:fontFamily="@font/nanum"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:text="경보 승인"/>
                        <Switch
                            android:id="@+id/set_admin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:text="침대 근접 감지"
                    android:color="@color/black"
                    android:fontFamily="@font/nanum_bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_prox"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="12dp"
                    app:progress_text_size="18dp"
                    app:line_width="12dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="18dp"
                        android:gravity="center"
                        android:text="근접 감지 상태"/>
                    <TextView
                        android:id="@+id/prox_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="감지됨"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_gravity="center"
                android:text="침대 자이로 측정"
                android:color="@color/black"
                android:fontFamily="@font/nanum_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_gyroX"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"
                    app:line_count="30"/>
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_gyroY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"/>
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_gyroZ"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:layout_gravity="center"
                android:text="침대 가속 측정"
                android:color="@color/black"
                android:fontFamily="@font/nanum_bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_accelX"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"
                    app:line_count="30"/>
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_accelY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"/>
                <com.dinuscxj.progressbar.CircleProgressBar
                    android:id="@+id/bed_accelZ"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:progress_style="solid_line"
                    app:progress_stroke_cap="round"
                    app:progress_stroke_width="8dp"
                    app:progress_text_size="14dp"
                    app:line_width="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:text="침대 각도 조절"
                android:color="@color/black"
                android:fontFamily="@font/nanum"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="12dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/resultMotor"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="0"/>
                <SeekBar
                    android:id="@+id/set_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:max="50"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>